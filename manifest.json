{
  "manifest_version": 3,
  "name": "WhatsApp Web PDF Viewer",
  "version": "1.0",
  "description": "View PDFs directly in WhatsApp Web without downloading them.",
  "permissions": [],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["fileViewer.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]
}